<resources >
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--         Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/inputHintColor</item>
        <item name="colorAccent">@color/textLight</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="SplashScreenTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="QuizAnswersButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/quiz_question_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/accentLight</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">@dimen/quiz_question_radioButton_margin</item>
    </style>


</resources>